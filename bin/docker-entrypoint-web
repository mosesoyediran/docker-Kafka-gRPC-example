#!/usr/bin/env bash
set -euo pipefail

###############################################################################
# docker-entrypoint-web  ‚Äî  Kafka-only micro-service
###############################################################################
#  ‚Ä¢ Spins up the AIOKafkaProducer
#  ‚Ä¢ Starts the ApiEventsConsumer loop
#  ‚Ä¢ Blocks until the container receives SIGTERM / ^C
###############################################################################

echo "üêô  Starting Kafka runner..."
# -u  = unbuffered stdout/stderr so logs appear immediately in `docker logs`
exec python -u -m kafka.app
